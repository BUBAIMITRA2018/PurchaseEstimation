<UserControl xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              DataContext="{Binding Path=HomeViewModel, Source={StaticResource ServiceLocator}}"
             x:Class="EstimationTool.HomeScreen.UserControlHome"
             mc:Ignorable="d"
             d:DesignHeight="1200" d:DesignWidth="760"  >



    <UserControl.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DataGrid.xaml" />
                <ResourceDictionary Source="/EstimationTool;component/Resources/ScrollViewerStyle.xaml" />
                <ResourceDictionary Source="/EstimationTool;component/Resources/DataGridStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>

        <DataGrid  HorizontalAlignment="Left" Height="344" VerticalAlignment="Top" Width="1630"   AlternationCount="2"    AutoGenerateColumns="False"                
        ItemsSource="{ Binding Products}" x:Name="dataGrid" Margin="274,94,-1126,0">

            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="Height" Value="35" />
                    <Setter Property="SeparatorBrush" Value="DarkRed" />
                    <Setter Property="FontWeight" Value="Black" />

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                                <Grid>                                    
                                    <Border x:Name="columnHeaderBorder"
						            BorderThickness="1"
						            Padding="3,0,3,0">
                                        <Border.BorderBrush>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="0" Color="#A5A5A5" />
                                                <GradientStop Offset="1" Color="#4B4B4B" />
                                            </LinearGradientBrush>
                                        </Border.BorderBrush>
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Offset="0" Color="#0055ff" />
                                                <GradientStop Offset="1" Color="#00ffee" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
							                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
							                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>



                    <Setter Property="ContentTemplate">                   
                     
                    
                        <Setter.Value>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Visibility="Visible"  Background ="Transparent" >
                                    <TextBlock  Text="{Binding}"   Background="Transparent" HorizontalAlignment="Center" Margin="10,5"   >

                                    </TextBlock>

                                    <Button x:Name="btnfilter" Click="Btnfilter_Click"
                                        HorizontalAlignment="Right" BorderBrush="Transparent" Background="Transparent"  Margin="0,-2" >

                                        <materialDesign:PackIcon Kind="Filter" Foreground="BlueViolet"  BorderThickness="0" BorderBrush="Transparent" HorizontalContentAlignment="Right" VerticalAlignment="Center"/>

                                    </Button>

                                </StackPanel>

                            </DataTemplate>
                        </Setter.Value>

                    </Setter>
                </Style>
            </DataGrid.Resources>


            <DataGrid.Columns>
                
                
                <DataGridTextColumn 
         
                                    Width="200"
				                    Binding="{Binding Id}"                                    
				                    Header="ID" />
                <DataGridTextColumn     Width="200"
                                    
				                    Binding="{Binding WBSElement}"
				                    Header="WBSElement" />
                <DataGridTextColumn     Width="200"
				                    Binding="{Binding ProductNo}"
				                    Header="ProductNo" />
                <DataGridTextColumn     Width="200"
				                    Binding="{Binding ItemDescription}"
				                    Header="ItemDescription" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding Specification}"
				                    Header="Specification" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding MatrialNo}"
				                    Header="MatrialNo" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding Description}"
				                    Header="Description" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding Project}"
				                    Header="Project" />


                <DataGridTextColumn     Width="200"
				                    Binding="{Binding QtyReq}"
				                    Header="QtyReq" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding UnitofMeasurment}"
				                    Header="UnitofMeasurment" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding UnitWt}"
				                    Header="UnitWt" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding WeightUnit}"
				                    Header="WeightUnit" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding PurchasingDocument}"
				                    Header="PurchasingDocument" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding Item}"
				                    Header="Item" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding PurchaseOrderNo}"
				                    Header="PurchaseOrderNo" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding UnitRatePrice}"
				                    Header="UnitRatePrice" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding NetOrderPrice}"
				                    Header="NetOrderPrice" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding Currency}"
				                    Header="Currency" />


                <DataGridTextColumn     Width="200"
				                    Binding="{Binding SupplierName}"
				                    Header="SupplierName" />

                <DataGridTextColumn     Width="200"
				                    Binding="{Binding Destination}"
				                    Header="Destination" />
               

            </DataGrid.Columns>
        </DataGrid>

        <Popup  x:Name="popExcel" Width="300" Height="300" Placement="Bottom" StaysOpen="False">
            <Border Background="White" BorderBrush="Gray" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBox x:Name="tbfilter" BorderBrush="Cyan" Text="" Foreground="Black" BorderThickness="3" Height="30" Grid.Row="0" Margin="10"  KeyDown="Tbfilter_KeyDown"></TextBox>
                    <Separator Grid.Row="0" VerticalAlignment="Bottom" Margin="10,0" Height="3"/>
                    <ListBox x:Name="lbfilter" BorderBrush="Cyan" BorderThickness="5"  Grid.Row="1" Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Is_Check}" Content="{Binding Title}"></CheckBox>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button x:Name="ApplyFilter" Click="ApplyFilter_Click" Grid.Row="2" Margin="10">ApplyFilter</Button>
                </Grid>
            </Border>
        </Popup>

    </StackPanel>


   

    




